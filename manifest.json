{
  "manifest_version": 2,
  "name": "Lycoris",
  "version": "0.3.2",
  "description": "Enhance code.google.com.",
  "permissions": [
    "*://code.google.com/*",
    "*://chromium.googlecode.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://code.google.com/*p/*/issues*"],
      "js": [
        "lycoris_utils.js",
        "lycoris_preview.js"
      ],
      "css": [
        "lycoris_preview.css"
      ]
    },
    {
      "matches": [
        "*://code.google.com/p/*/source/detail*"
      ],
      "js": [ "lycoris_title.js"]
    }
  ]
}